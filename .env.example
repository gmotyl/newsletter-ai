# Email IMAP Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-specific-password  # For Gmail: https://myaccount.google.com/apppasswords

# LLM Provider
LLM_PROVIDER=anthropic  # Options: anthropic, openai, google
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Model Configuration
# Anthropic models: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022, claude-3-opus-20240229
# OpenAI models: gpt-4-turbo-preview, gpt-4o, gpt-4, gpt-3.5-turbo
# Google models: gemini-1.5-pro, gemini-1.5-flash
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Processing Options
MAX_ARTICLES_PER_NEWSLETTER=15
SCRAPING_TIMEOUT_MS=30000
ENABLE_CACHING=true
# Options: PL, EN
OUTPUT_LANGUAGE=PL
# Options: thePrimeagen, Fireship, TheoT3, Kent C. Dodds, Dan Abramov, Scott Hanselman, Casey Muratori, Jon Blow
NARRATOR_PERSONA=thePrimeagen
MARK_AS_READ=true
AUTO_DELETE_AFTER_PROCESSING=false  # Set to true to automatically delete processed emails
