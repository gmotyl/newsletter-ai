{
  "name": "newsletter-ai",
  "version": "1.0.0",
  "description": "AI-powered newsletter processor that extracts article links, reads content, and generates audio-friendly summaries",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "prepare": "tsx src/index.ts --mode prepare",
    "generate": "tsx src/index.ts --mode generate",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "help": "npm start -- --help",
    "process": "npm start --",
    "process:dev": "npm run dev --",
    "dry-run": "npm start -- --dry-run",
    "dry-run:dev": "npm run dev -- --dry-run",
    "process:daily": "npm start -- --pattern daily.dev",
    "process:daily:dev": "npm run dev -- --pattern daily.dev",
    "process:auto-delete": "npm start -- --auto-delete",
    "process:gpt4": "npm start -- --model gpt-4-turbo-preview",
    "process:claude": "npm start -- --model claude-3-5-sonnet-20241022",
    "clean:delete": "pnpm tsx scripts/cleanup-processed.ts delete"
  },
  "keywords": [
    "newsletter",
    "ai",
    "gmail",
    "summarization"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.35",
    "@ai-sdk/openai": "^2.0.53",
    "@extractus/article-extractor": "^8.0.20",
    "@types/js-yaml": "^4.0.9",
    "ai": "^5.0.76",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "inquirer": "^12.10.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mailparser": "^3.7.5",
    "node-imap": "^0.9.6",
    "ora": "^9.0.0",
    "p-limit": "^7.2.0",
    "puppeteer": "^24.26.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/lodash": "^4.17.20",
    "@types/lodash-es": "^4.17.12",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^24.9.1",
    "@types/node-imap": "^0.9.3",
    "@vitest/ui": "^4.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1"
  }
}